@model IEnumerable<Photo_Video_Studio.Models.ClientSlider>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="ClientSlider/Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th style="width:30%;">
            @Html.DisplayNameFor(model => model.Subtitle)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="~/Public/images/@item.Image" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subtitle)
        </td>
        <td>
            <a href="@Url.Action("Edit", "ClientSlider", new { id =item.ID })" class="btn btn-warning"><i class="far fa-edit"></i></a>
            <a href="@Url.Action("Details", "ClientSlider", new { id =item.ID })" class="btn btn-primary"><i class="fas fa-info-circle"></i></a>

            @if (Model.ToArray().Length > 1)
            {
                <a href="@Url.Action("Delete", "ClientSlider", new { id =item.ID })" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
            }
        </td>
    </tr>
}

</table>

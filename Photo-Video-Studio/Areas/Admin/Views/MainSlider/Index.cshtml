@model IEnumerable<Photo_Video_Studio.Models.MainSlider>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="MainSlider/Create" class="btn btn-primary">Create</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            Company Name
        </th>
        <th>
            Bold Title
        </th>
        <th>
            Subtitle
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td style="width:20%;">
            <img src="~/Public/images/mainslider/@item.Image" alt="Alternate Text" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RotateHeader)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MainTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Subtitle)
        </td>
        <td>

            <a href="@Url.Action("Edit", "MainSlider", new { id =item.Id })" class="btn btn-warning"><i class="far fa-edit"></i></a>|
            <a href="@Url.Action("Details", "MainSlider", new { id =item.Id })" class="btn btn-primary"><i class="fas fa-info-circle"></i></a>|

            @if (Model.ToArray().Length > 1)
            {
                <a href="@Url.Action("Delete", "MainSlider", new { id =item.Id })" class="btn btn-danger"><i class="fas fa-trash-alt"></i></a>
            }
        </td>
    </tr>
}

</table>

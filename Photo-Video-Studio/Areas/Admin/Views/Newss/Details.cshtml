@model Photo_Video_Studio.ViewModels.SingleNewsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>News</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.News.Image)
        </dt>

        <dd>
            <img src="~/Public/images/@Model.News.Image" alt="Alternate Text" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.News.CreatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.News.CreatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.News.UpdatedAt)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.News.UpdatedAt)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.News.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.News.Title)
        </dd>
        <dt>
            Tag
        </dt>
        <dd>
            @foreach (var item in Model.NewsToTags)
            {
            <span>@item.NewsTag.Tag , </span>
            }
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.News.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.News.Description)
        </dd>

    </dl>
</div>
<p>
    <a class="btn btn-primary" href="@Url.Action("Index","Newss")">Back to List</a>
</p>

@{
    ViewBag.Title = "Login";
}

    <section id="loginHead">
        <img src="~/Public/images/banner8.jpg" alt="">
        <div class="loginLayout"></div>
        <h1>LOGIN</h1>
        <p class="loginSubtitle"><span>Our</span> Login</p>
    </section>

    <section id="login">
        <div class="container">
            <div class="col-md-4 offset-md-4">
                <form method="post">
                    <label for="email">Email:</label>
                    <br>
                    <input id="email" type="email" name="email" class="textInput">
                    <br>
                    <label for="password">Password:</label>
                    <br>
                    <input id="password" type="password" name="password" class="textInput">
                    <br>
                    <input id="radio" type="radio" name="asStaff" value=true>As a Staff
                    @if (ViewBag.LoginError != null)
                    {
                        <div class="alert alert-danger">
                            <p>@ViewBag.LoginError</p>
                        </div>
                    }
                    <br>
                    <a href="Register" class="register">Do not have an account?</a>

                    <br>
                    <input type="submit" name="Login" value="Login" class="login" />

                </form>
            </div>
        </div>
    </section>

    <section id="map">
        <div class="mapouter">
            <div class="gmap_canvas">
                <iframe width="100%" height="440" id="gmap_canvas"
                        src="https://maps.google.com/maps?q=BAKU&t=&z=11&ie=UTF8&iwloc=&output=embed" frameborder="0"
                        scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.pureblack.de/webdesign-muenchen/"></a>
            </div>
            <style>
                .mapouter {
                    text-align: right;
                    height: 440px;
                    width: 100%;
                }

                .gmap_canvas {
                    overflow: hidden;
                    background: none !important;
                    height: 440px;
                    width: 100%;
                }
            </style>
        </div>
    </section>
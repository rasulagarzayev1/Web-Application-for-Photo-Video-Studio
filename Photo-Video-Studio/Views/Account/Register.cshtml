@model Photo_Video_Studio.Models.User

@{
    ViewBag.Title = "Register";
}

<section id="registerHead">
    <img src="~/Public/images/banner9.jpg" alt="">
    <div class="loginLayout"></div>
    <h1>REGISTER</h1>
    <p class="registerSubtitle"><span>Our</span> Register</p>
</section>

<section id="registration">
    <div class="container">
        <div class="col-md-4 offset-md-4">
            <form method="post">
                <label>Firstname:</label>
                <br>
                <input id="firstname" type="text" name="firstname" class="textInput" >
                @Html.ValidationMessageFor(model => model.Firstname, "", new { @class = "text-danger" })
                <br>
                <label>Lastname:</label>
                <br>
                <input id="lastname" type="text" name="lastname" class="textInput" >
                @Html.ValidationMessageFor(model => model.Lastname, "", new { @class = "text-danger" })
                <br>
                <label>Email:</label>
                <br>
                <input id="email" type="text" name="email" class="textInput" >
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                <br>
                <label>Password:</label>
                <br>
                <input id="password" type="password" name="password" class="textInput" >
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                <br>
                <input type="submit" name="Login" value="Register" class="register" />
            </form>
        </div>
    </div>
</section>


<section id="map">
    <div class="mapouter">
        <div class="gmap_canvas">
            <iframe width="100%" height="440" id="gmap_canvas"
                    src="https://maps.google.com/maps?q=BAKU&t=&z=11&ie=UTF8&iwloc=&output=embed" frameborder="0"
                    scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.pureblack.de/webdesign-muenchen/"></a>
        </div>
        <style>
            .mapouter {
                text-align: right;
                height: 440px;
                width: 100%;
            }

            .gmap_canvas {
                overflow: hidden;
                background: none !important;
                height: 440px;
                width: 100%;
            }
        </style>
    </div>
</section>






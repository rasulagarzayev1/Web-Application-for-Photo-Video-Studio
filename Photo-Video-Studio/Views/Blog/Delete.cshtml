@model Photo_Video_Studio.Models.Blog

@{
    ViewBag.Title = "Delete";
}

<section id="blogHead">
    <img src="~/Public/images/banner3.png" alt="">
    <div class="blogLayout"></div>
    <h1>BLOG</h1>
    <p class="blogSubtitle"><span>Our</span> Blog</p>
</section>
<div class="container-fluid">
    <h3 style="font-size:1.5em;color:red; font-family:'Montserrat', sans-serif;">Are you sure you want to delete this?</h3>
    <table  class="table table-bordered deleteTable">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    <img src="~/Public/images/@Model.Image" alt="Alternate Text" />
                </td>
                <td>
                    @Html.DisplayFor(model => model.Title)
                </td>
                <td style="line-height:1.7em;">
                    @Model.Content.Substring(0, 400)  ...
                </td>
            </tr>
        </tbody>
    </table>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a class="btn btn-primary" href="@Url.Action("Index","Blog")">Back to List</a>
        </div>
    }
</div>

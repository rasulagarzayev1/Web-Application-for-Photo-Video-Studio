@using Photo_Video_Studio.Models
@model LoginHeader
@{
    ViewBag.Title = "Login";
}

<section id="loginHead">
    <img src="~/Public/images/@Model.Image" alt="">
    <div class="loginLayout"></div>
    <h1>LOGIN</h1>
    <p class="loginSubtitle"><span>Our</span> Login</p>
</section>

<section id="login">
    <div class="container">
        <div class="col-md-4 offset-md-4">
            <form>
                <label>Email:</label>
                <br>
                <input type="email" class="textInput" required>
                <br>
                <label>Password:</label>
                <br>
                <input type="password" class="textInput" required>
                <br>
                <input type="radio" name="staff" value="staff">As a Staff
                <br>

                <a href="Register" class="register">Do not have an account?</a>

                <br>

                <a href="" class="login">Login</a>

            </form>
        </div>
    </div>
</section>

<section id="map">
    <div class="mapouter">
        <div class="gmap_canvas">
            <iframe width="100%" height="440" id="gmap_canvas"
                    src="https://maps.google.com/maps?q=BAKU&t=&z=11&ie=UTF8&iwloc=&output=embed" frameborder="0"
                    scrolling="no" marginheight="0" marginwidth="0"></iframe><a href="https://www.pureblack.de/webdesign-muenchen/"></a>
        </div>
        <style>
            .mapouter {
                text-align: right;
                height: 440px;
                width: 100%;
            }

            .gmap_canvas {
                overflow: hidden;
                background: none !important;
                height: 440px;
                width: 100%;
            }
        </style>
    </div>
</section>

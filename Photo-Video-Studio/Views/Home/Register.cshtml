@using Photo_Video_Studio.Models
@model RegisterHeader
@{
    ViewBag.Title = "Register";
}

<section id="registerHead">
        <img src="~/Public/images/@Model.Image" alt="">
        <div class="loginLayout"></div>
        <h1>REGISTER</h1>
        <p class="registerSubtitle"><span>Our</span> Register</p>
    </section>

<section id="registration">
        <div class="container">
            <div class="col-md-4 offset-md-4">
                <form>
                    <label>Firstname:</label>
                    <br>
                    <input type="text" class="textInput" required>
                    <br>
                    <label>Lastname:</label>
                    <br>
                    <input type="text" class="textInput" required>
                    <br>
                    <label>Email:</label>
                    <br>
                    <input type="email" class="textInput" required>
                    <br>
                    <label>Password:</label>
                    <br>
                    <input type="password" class="textInput" required>
                    <br>
                    <label>Confirmed Password:</label>
                    <br>
                    <input type="password" class="textInput" required>
                    <br>
                    <a href="" class="register">Register</a>

                </form>
            </div>
        </div>
    </section>

<section id="map">
        <div class="mapouter">
            <div class="gmap_canvas"><iframe width="100%" height="440" id="gmap_canvas"
                    src="https://maps.google.com/maps?q=BAKU&t=&z=11&ie=UTF8&iwloc=&output=embed" frameborder="0"
                    scrolling="no" marginheight="0" marginwidth="0"></iframe><a
                    href="https://www.pureblack.de/webdesign-muenchen/"></a></div>
            <style>
                .mapouter {
                    text-align: right;
                    height: 440px;
                    width: 100%;
                }

                .gmap_canvas {
                    overflow: hidden;
                    background: none !important;
                    height: 440px;
                    width: 100%;
                }
            </style>
        </div>
    </section>

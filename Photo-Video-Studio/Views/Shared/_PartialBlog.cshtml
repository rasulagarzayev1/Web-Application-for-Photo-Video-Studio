@using Photo_Video_Studio.Models
@model List<Blog>

@for (int i = 0; i < Model.Count; i++)
{
    if (i % 2 != 0)
    {
        <div class="col-md-6 blogDiv blogImage couple">
            <img src="~/Public/images/@Model[i].Image" alt="">
        </div>
        <div class="col-md-6 blogDiv blogTextDiv rightText">
            <h3><a href="">@Model[i].Title</a></h3>
            <p class="admin"><a href="@Url.Action("Author", "Blog", new { author = @Model[i].User.Firstname})" rel="author"><i class="fas fa-user"></i> @Model[i].User.Firstname</a></p>
            <p class="blogText">
                @Model[i].Content.Substring(0, 159)
            </p>
            <a class="readMore" href="@Url.Action("Single", "Blog", new { id = Model[i].ID })">Read More >></a>
        </div>
    }
    else
    {
        <div class="col-md-6 blogDiv blogTextDiv leftText couple">
            <h3><a href="">@Model[i].Title</a></h3>
            <p class="admin"><a href="@Url.Action("Author", "Blog", new { author = @Model[i].User.Firstname})" rel="author"><i class="fas fa-user"></i> @Model[i].User.Firstname</a></p>
            <p class="blogText">
                @Model[i].Content.Substring(0, 159)
            </p>
            <a class="readMore" href="@Url.Action("Single", "Blog", new { id = Model[i].ID })">Read More >></a>
        </div>
        <div class="col-md-6 blogDiv blogImage">
            <img src="~/Public/images/@Model[i].Image" alt="">
        </div>

    }
}